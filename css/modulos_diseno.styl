	content "\f138"
	font-size 2em	
azul_institucional=#003366
amarillo_institucional=#CC9900
gris=#CCCCCC
.linea_amarilla_art	
	border-bottom 10px solid azul_institucional
	width 100%
.shape 
	width 80%
	height 300px
	-webkit-clip-path: polygon(0px 0px, 1218px 0px, 975px 93px, 7px 239px, 1218px 455px, 0px 455px)
figure
	margin 0
body
	font-size 16px
	#text_main
		margin 0
		color azul_institucional
	#prueba
		height 455px
		overflow hidden
	#info_mod_div
		width 90%
		padding 0 2.5% 3em 2.5%
		text-align center
		margin 0 auto
		#info_mod
			width 100%
			color black
			text-align justify
			font-size 16px			
		#img_info_mod
			width 50%
			margin 0 auto
			img
				width 100%
				padding-bottom 5em
	.tabs
		text-align center
		li
			display inline-block
			margin 0 2em 0  0
			font-weight bold
			color azul_institucional
			&:hover
				cursor	pointer
	.perro::before
	.perro::after		
		opacity 0
		-ms-opacity 0
		-webkit-transition -webkit-transform 0.3s, opacity 0.2s
		-moz-transition -moz-transform 0.3s, opacity 0.2s
		-ms-transition -ms-transform 0.3s, opacity 0.2s
		-o-ttransition -o-transform 0.3s, opacity 0.2s
		transition transform 0.3s, opacity 0.2s
		cursor pointer
	.perro::before 
		margin-right 10px
		content '['
		-webkit-transform translateX(20px)
		-moz-transform translateX(20px)
		-ms-transform translateX(20px)
		-o-transform translateX(20px)
		transform translateX(20px)
		cursor pointer
	.perro::after 
		margin-left 10px
		content ']'
		-webkit-transform translateX(-20px)
		-moz-transform translateX(-20px)
		-ms-transform translateX(-20px)
		-o-transform translateX(-20px)
		transform translateX(-20px)
		cursor pointer
	.perro:hover::before
	.perro:hover::after
	.perro:focus::before
	.perro:focus::after 
		-ms-opacity 1
		opacity 1
		-webkit-transform translateX(0px)
		-moz-transform translateX(0px)
		-ms-transform translateX(0px)
		-o-transform translateX(0px)
		transform translateX(0px)
		color amarillo_institucional
		cursor pointer
	.container
		width 100%
		margin 0 auto
		.tab-content
			display none
			padding 15px
		.tab-content.current
			display block	
		.botones
			display inline-block
			width 100%
			position absolute
			top 50%
			text-decoration none
			.x
				float left
				text-decoration none
			.y
				float right
				text-decoration none
	.title_art
		color azul_institucional
		text-align center
		margin 0
		padding 1em 0
		font-size 22px
	.article_module_online
		border-radius .5em
		box-shadow 2px 2px 10px rgba(0,0,0,0.5)
		background gris
		margin-bottom 1em
		&:last-child
			margin-bottom 0
	.information_mod
		padding-left 0.5em
		.image_mod
			float left
			img
				height 160px
				vertical-align top
				width 120px
				border-radius 50% 
				padding 5px 3px 0 3px
		.title_name_mod
			padding 0.5em 
			color amarillo_institucional
		.name_person_mod
			padding 1em
			color black
		.addres_person_mod
			color azul_institucional
			padding-bottom 2em
			display block
			font-weight bold
		.email_person_mod
			padding .2em .5em
			margin 0
h1
	padding-top 1em
	font-weight bold
	color azul_institucional
	text-align center
footer
	.line_footer
		width 100%
		top 80%
		position absolute
		img
			width 100%
@media screen and (min-width: 768px)
	.article_module_online
		display inline-block !important
		width 46%
		vertical-align top
		/*pseudo-clase odd=impares=2n+1  even=pares=2n*/
		&:nth-child(odd)
			margin-left 2%
		&:nth-child(even)
			margin-left 2%


