/* En resoluciones max=menores a 480px vista para celular */
@media screen and (max-width: 480px)
	nav
		a 
			color azul_institucional
			&:hover
				cursor pointer
				color amarillo_institucional
		#menu
			overflow-y visible
			white-space normal
			text-align center
			height auto
			li 
				margin 0
				padding 0
				margin-bottom .5em
				border-bottom 5px solid white
				padding 0.5em 0
				width 100%
				&:first-child
					border-top 5px solid white
				&:last-child
					margin-bottom 0
					border-right 5px solid #373737
				a 
					border-right 0px solid gris
	#form #formulario
		width 100%
		border-right 0px
		border-left 0px
		border-top 0px
		border-bottom 0px
		#enviar
			width 50%
	.icon-calendar:before 
		font-size 1.5em
	.line_footer
		top 90%
